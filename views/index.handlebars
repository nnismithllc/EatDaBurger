{{!-- Title H1 Information --}}
<h1>BURGER ME BABY!</h1>

{{!-- Upper Tag Layout Divs and Unordered List --}}
<h2>Burger Menu</h2>
<ul>
  {{#each burgers}}
  {{#unless devour}}
  {{> burgers/burger-block devour=false}}
  {{/unless}}
  {{/each}}
</ul>

{{!-- Middle Tag Layout Divs and Unordered List --}}
<h2> Burgers With Pizazz!</h2>

<ul>
  {{#each burgers}}
  {{#if devour}}
  {{> burgers/burger-block devour=true}}
  {{/if}}
  {{/each}}
</ul>

{{!-- Bottom Tag Layout Divs --}}
<h2>Add A Burger</h2>
<form class="create-form">

<div class="form-group">
  <label for="ca" class="bname"> Burger Name:</label>
   <input type="text" id="ca" name="name" class="one">
</div>

{{!-- Form Layout --}}
<div class="form-group" class="two">
  <label for="devour" class="bname">Order?</label><br>
  <input type="radio" name="devour" value="1" checked> Add!<br>
  <input type="radio" name="devour" value="0"> Ordered!
</div>

{{!-- Submit Button --}}
  <button type="submit" class="three">Add Burger</button>
</form>